{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "lib": ["es2021"],
    "skipLibCheck": true,

    "newLine": "lf",
    "noErrorTruncation": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,

    "incremental": false
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.json"]
}
